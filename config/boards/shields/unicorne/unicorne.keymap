#pragma once

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#include <dt-bindings/zmk/hid_usage.h>
#include <dt-bindings/zmk/hid_usage_pages.h>
#include <dt-bindings/zmk/modifiers.h>

// definition of special keys mutated vowels (from german layout)
#define DE_AE QUOT         // Ä
#define DE_OE SCLN         // Ö
#define DE_UE LBRC         // Ü
#define DE_SS MINS         // ß
#define DE_EURO RA(DE_E)   // €

/ {
        keymap {
                compatible = "zmk,keymap";

                default {
                        bindings = <
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp TAB     &kp Q      &kp W      &kp E      &kp R      &kp T                                &kp Y    &kp U      &kp I      &kp O      &kp P      &kp BSPC
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LCTRL   &kp A      &kp S      &kp D      &kp F      &kp G                                &kp H    &kp J      &kp K      &kp L      &kp SEMI   &kp SQT
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LSHFT   &kp Z      &kp X      &kp C      &kp V      &kp B                                &kp N    &kp M      &kp COMMA  &kp DOT    &kp FSLH   &kp ESC
// |----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                                                  &kp LGUI   &mo 1    &kp SPACE      &kp RET      &mo 2    &kp LALT  
//                                             |----------+----------+----------|  |----------+----------+----------|
                        >;
                };

                lower {
                        bindings = <
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp TAB     &kp N1     &kp N2     &kp N3     &kp N4     &kp N5                              &kp N6    &kp N7     &kp N8      &kp N9    &kp N0     &kp DEL
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LCTRL   &trans     &trans     &trans     &trans     &trans                              &kp HOME   &kp LEFT  &kp DOWN    &kp UP    &kp RIGHT  &kp END
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LSHFT   &trans     &trans     &trans     &trans     &trans                              &trans     &trans    &kp PG_DN  &kp PG_UP   &trans     &trans
// |----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                                                  &kp LGUI   &trans   &kp SPACE      &kp RET     &mo 3     &kp LALT  
//                                             |----------+----------+----------|  |----------+----------+----------|
                        >;
                };

                raise {
                        bindings = <
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp TAB    &kp EXCL   &kp AT     &kp HASH   &kp DLLR   &kp PRCNT                           &kp CARET &kp AMPS &kp KP_MULTIPLY &kp LPAR &kp RPAR   &kp DEL
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LCTRL &kp DE_AE   &DE_EURO    &trans     &trans     &trans                             &kp MINUS  &kp EQUAL &kp LBKT    &kp RBKT   &kp BSLH   &kp GRAVE
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LSHFT  &trans     &trans     &trans     &trans     &trans                              &kp UNDER  &kp PLUS   &kp LBRC   &kp RBRC   &kp PIPE  &kp TILDE
// |----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                                                 &kp LGUI   &mo 3     &kp SPACE      &kp RET    &trans     &kp LALT  
//                                             |----------+----------+----------|  |----------+----------+----------|
                        >;
                };

                func {
                        bindings = <
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp TAB     &kp F1     &kp F2     &kp F3     &kp F4     &kp F5                              &kp F6     &kp F7     &kp F8     &kp F9     &kp F10   &kp DEL
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LCTRL   &kp F11    &kp F12    &kp F13    &kp F14    &kp F15                             &trans  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans &bt BT_CLR
// |----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
     &kp LSHFT   &trans     &trans     &trans     &trans     &trans                              &trans  &out OUT_USB &out OUT_BLE &out OUT_TOG &trans  &trans
// |----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                                                  &kp LGUI   &trans    &kp SPACE     &kp RET    &trans     &kp LALT  
//                                             |----------+----------+----------|  |----------+----------+----------|
                        >;
                };
        };
};
